<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.sourceforge.io/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">
        <!-- Suppress Method Name Check - sql requires specific method names -->
        <module name="MethodName">
            <property name="severity" value="ignore"/>
        </module>
		
        <!-- Suppress Javadoc Method Check - not enough comments for every param -->
        <module name="JavadocMethod">
            <property name="severity" value="ignore"/>
        </module>

        <!-- Suppress Visibility Modifier Check 
        <module name="VisibilityModifier">
            <property name="severity" value="ignore"/>
        </module> -->
		
        <!-- Suppress Utility Class Constructor Check
        <module name="HideUtilityClassConstructor">
            <property name="severity" value="ignore"/>
        </module> -->

        <!-- Suppress Design for Extension Check
        <module name="DesignForExtension">
            <property name="severity" value="ignore"/>
        </module> -->
    </module>

    <!-- Suppress File Tab Character Check -->
    <module name="FileTabCharacter">
        <property name="severity" value="ignore"/>
    </module>

    <!-- Suppress Line Length Check -->
    <module name="LineLength">
        <property name="severity" value="ignore"/>
    </module>
</module>
